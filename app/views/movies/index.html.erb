<p style="color: green"><%= notice %></p>

<% content_for :title, "Movies" %>

<h1>Movies</h1>

<table>
  <thead>
    <tr>
      <th><%= sortable "title", "Title" %></th>
      <th><%= sortable "rating", "Rating" %></th>
      <th><%= sortable "release_date", "Release Date" %></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr id="<%= dom_id movie %>">
        <td><%= link_to movie.title, movie_path(movie, sort: params[:sort], direction: params[:direction]) %></td>
        <td><%= movie.rating %></td>
        <td><%= movie.release_date.strftime("%B %d, %Y") %></td>
      </tr>
    <% end %>
  </tbody>

  <tfoot>
    <tr>
      <td colspan="3">Total Movies: <%= @movies.count %></td>
    </tr>
  </tfoot>
</table>

<%= link_to "New movie", new_movie_path(sort: params[:sort], direction: params[:direction]) %>
